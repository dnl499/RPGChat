<?php
	if ($_SERVER['REQUEST_METHOD'] == 'POST') {
		$login	 = clear($_POST['LOGIN']);
		$pass	 = $_POST['PASS'];
		$contato = clear($_POST['CONTATO']);
		$iv		 = $_POST['IV'];
			
		if (empty($login) or empty($pass) or empty($contato)) {
			
			echo "Dados de login invÃ¡idos";
				
		} else {

			$server = 'localhost';
			$user = 'id2094952_appdata';
			$senha = 'AppData123';
